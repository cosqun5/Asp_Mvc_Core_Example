@using Bilet1.Models;
@model List<Post>
@{
	ViewData["Title"] = "Index";
	Layout = "_Layout";
	var a = 1;
}

<div class="card">
	<div class="card-body">
		<h4 class="card-title">Groups</h4>

		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>Title</th>
						<th>Description</th>
						<th>Image</th>
						<th>Delete</th>
						<th>Update</th>
					</tr>
				</thead>
				<tbody>
					@foreach (Post item in Model)
					{

						<tr>
							<td>@a</td>
							<td>@item.Title</td>
							<td>@item.Description</td>
							<td><img src="~/assets/images/@item.Path"/></td>
							<td><a href="~/Admin/Posts/Delete/@item.Id"  class="btn btn-outline-danger"> Delete</a></td>
							<td><a href="~/Admin/Posts/Update/@item.Id" class="btn btn-outline-success">Update</a></td>

						</tr>
						a++;
					}


				</tbody>
			</table>
			<a href="~/Admin/Posts/Create/" class="btn btn-outline-primary" style="margin-right:0px;"> Create</a>
		</div>
	</div>
</div>

